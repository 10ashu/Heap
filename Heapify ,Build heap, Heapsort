#include<bits/stdc++.h>
using namespace std;
void heapify(int arr[],int size,int i)
{
    int index=i;
    int largest=index;

        int left=2*i;
        int right=2*i+1;
        if( left <= size && arr[largest] < arr[left] )
        {
            largest=left;
        }    
        if( right <= size && arr[largest]< arr[right] )
        {
            largest=right;
        }
        if(index!=largest)
        {
            swap(arr[index],arr[largest]);
            index=largest;
            heapify(arr,size,index);
        }
          
    }
    
void buildheap(int arr[],int n)
{   
    for(int i=n/2;i>0;i--)
    {
        heapify(arr,n,i);
    }
}
void heapsort(int arr[],int n)
{
    while (n!=1)
    {
        swap(arr[1],arr[n]);
        n--;
        heapify(arr,n,1);
    }
    
}
int main()
{
    int arr[]={-1,1,2,3,4,5};
    int size=5;
    // heapify(arr,size,1);
    // for(int i=0;i<size;i++)
    // {
    //     cout<<arr[i]<<" ";
    // }
    buildheap(arr,size);
    for(int i=0;i<=size;i++)
    {
        cout<<arr[i]<<" ";
    }
    heapsort(arr,5);
    cout<<endl;
    for(int i=0;i<=size;i++)
    {
        cout<<arr[i]<<" ";
    }
    return 0;
}
